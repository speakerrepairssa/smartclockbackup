{
  "expo": {
    "name": "AIClock Employee Portal",
    "slug": "aiclock-employee-portal",
    "owner": "srsa",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#48bb78",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.srsa.aiclock.employee"
    },
    "android": {
      "package": "com.srsa.aiclock.employee",
      "adaptiveIcon": {
        "backgroundColor": "#48bb78"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "0acd8743-7174-4870-90ba-dc1d620c450d"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow AIClock Employee Portal to access camera for QR scanning"
        }
      ]
    ]
  }
}
